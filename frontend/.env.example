# .env.example
# Copy this file to .env and fill in your actual values

# ================================
# AUTHENTICATION
# ================================
# Clerk Authentication - Get from https://clerk.dev
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here

# ================================
# GOOGLE MAPS & PLACES API
# ================================
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Make sure to enable: Maps JavaScript API, Places API, Geocoding API
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Get Map ID from: https://console.cloud.google.com/google/maps-apis/studio/maps
# Create a new map style or use: DEMO_MAP_ID for testing
VITE_GOOGLE_MAPS_MAP_ID=your_map_id_here

# ================================
# API CONFIGURATION
# ================================
# Your backend API base URL
VITE_API_BASE_URL=http://localhost:5000/api

# ================================
# PAYMENT PROCESSING
# ================================
# Stripe publishable key - Get from: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# ================================
# AI SERVICES
# ================================
# Google Gemini AI API key - Get from: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# ================================
# APP CONFIGURATION
# ================================
VITE_APP_NAME=Elaview Advertising Platform
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Connect property owners with advertisers

# ================================
# DEVELOPMENT SETTINGS
# ================================
# Set to 'development' or 'production'
VITE_NODE_ENV=development

# Enable debug logging in development
VITE_DEBUG_MODE=true

# ================================
# OPTIONAL: ADDITIONAL SERVICES
# ================================
# Analytics tracking ID (if using Google Analytics)
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (if using Sentry)
# VITE_SENTRY_DSN=https://your-sentry-dsn-here

# ================================
# SECURITY NOTES
# ================================
# - All VITE_ prefixed variables are exposed to the browser
# - Never put sensitive server-side secrets here
# - Use environment-specific files (.env.development, .env.production)
# - Add .env.local to .gitignore for local overrides